@model Telerik_ForumTeamProject.Models.ViewModels.UserSearchViewModel

@{
    ViewData["Title"] = "User Search Results";
    Layout = "_Layout"; // Ensure the layout is applied
}

<div class="container mx-auto p-6 mt-6 bg-gray-700 shadow-md rounded-lg">
    <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Search Results for "@Model.Query"</h2>
    <ul class="mt-6">
        @foreach (var user in Model.Users)
        {
            <li class="mb-4 bg-gray-800 p-4 rounded-lg shadow-md">
                <a href="@Url.Action("Details", "User", new { id = user.ID })" class="text-lg text-green-500 hover:underline">
                    @user.FirstName
                    @user.LastName
                </a>
            </li>
        }
    </ul>
</div>
