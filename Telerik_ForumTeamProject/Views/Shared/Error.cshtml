@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Error";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link rel="stylesheet" href="~/css/site.css" />

<body class="bg-gray-900 text-gray-100 min-h-screen flex items-center justify-center">

    <div class="bg-gray-700 shadow-md rounded-lg p-6 w-full max-w-md">
        <div class="bg-gray-800 p-6 rounded-lg shadow-md text-center">
            <h2 class="text-4xl font-bold text-white mb-4">Something went wrong</h2>
            <p class="text-gray-300 mb-4">@Context.Response.StatusCode</p>
            <p class="text-gray-300 mb-4">@ViewData["ErrorMessage"]</p>

            <a href="/" class="bg-green-500 text-white p-2 mt-2 rounded hover:bg-green-700 transition duration-300 inline-block">Go to Home</a>
        </div>
    </div>

</body>


